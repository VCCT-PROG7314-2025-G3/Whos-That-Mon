<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/kalos_pokedex_wallpaper"
        android:layout_above="@+id/bottom_nav_container"> <!-- This ID should be in your include layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title Banner -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/app_title" />

            <!-- Guess prompt -->
            <EditText
                android:id="@+id/etGuess"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/orange_kid"
                android:hint="Who is it...?"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <!-- Pokémon Image -->
            <ImageView
                android:id="@+id/ivPokemon"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- Result Message -->
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text=""
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Guess Button -->
            <Button
                android:id="@+id/btnSubmitGuess"
                android:layout_width="181dp"
                android:layout_height="61dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_colour"
                android:fontFamily="@font/orange_kid"
                android:text="Submit Guess"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:strokeColor="@color/white"
                app:strokeWidth="7dp" />

            <!-- Next Pokémon -->
            <Button
                android:id="@+id/btnNextPokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Next Pokémon"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:visibility="gone"
                app:strokeColor="@color/white"
                app:strokeWidth="7dp" />
        </LinearLayout>

    </ScrollView>

    <!-- Loading Indicator ProgressBar -->
    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- Loading Indicator TextView -->
    <TextView
        android:id="@+id/tv_loading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pb_loading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="Preparing Pokémon..."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/include_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

